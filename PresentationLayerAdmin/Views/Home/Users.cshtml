@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"> <a href="">Resumen</a></li>
    <li class="breadcrumb-item"> <a href="">Users</a></li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i> Users List
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="openModal()">Create User</button>
            </div>
        </div>
        <hr />

        <table id="table" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Lastname</th>
                    <th>Email</th>
                    <th>Active</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
    data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">User Form</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body g-2">
                <input id="txtId" type="hidden" value="0" />
                <div class="row">
                    <div class="col-sm-6">
                        <label for="txtnames" class="form-label">Names</label>
                        <input type="text" class="form-control" id="txtnames" placeholder="Enter your names">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtlastname" class="form-label">Lastname</label>
                        <input type="text" class="form-control" id="txtlastname" placeholder="Enter your lastname">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtEmail" class="form-label">Email</label>
                        <input type="email" class="form-control" id="txtEmail" placeholder="Enter your email">
                    </div>
                    <div class="col-sm-6">
                        <label for="Activo" class="form-label">Active</label>
                        <select class="form-select" id="Active">
                            <option value="true">Active</option>
                            <option value="false">Inactive</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="save()">Save</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
<script>
    var datadable
    var selectedRow
    datadable = $('#table').DataTable({
        responsive: true,
        ordering: false,
        "ajax": {
            url: '@Url.Action("ListUsers","Home")',
            type: 'GET',
            dataType: 'json',
        },
        "columns": [
            { "data": "Nombres" },
            { "data": "Apellidos" },
            { "data": "Correo" },
            {
                "data": "Activo", "render":
                    (data) => {
                        return data ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-danger">Inactive</span>'
                    }
            },
            {
                "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-edit"><i class="fas fa-pen"></i></button>' + ' ' +
                    '<button type="button" class="btn btn-danger btn-sm ml-1"><i class="fas fa-trash"></i></button>',
                "orderable": false,
                "searchable": false,
                "width": "90px"
            }
        ],
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
        }

    });

    const openModal = (data) => {
        $('#txtId').val(0);
        $('#txtnames').val('');
        $('#txtlastname').val('');
        $('#txtEmail').val('');
        $('#Active').val('true');

        if (data != null) {
            $('#txtId').val(data.IdUsuario);
            $('#txtnames').val(data.Nombres);
            $('#txtlastname').val(data.Apellidos);
            $('#txtEmail').val(data.Correo);
            $('#Active').val(data.Activo ? 'true' : 'false');
        }
        $('#FormModal').modal('show');
    }

    $('#table tbody').on('click', '.btn-edit', function () {
        selectedRow = $(this).parents('tr');
        const data = datadable.row(selectedRow).data();
        console.log(data);
        openModal(data);
    });

    const save = () => {
        var user = {
            IdUsuario: $('#txtId').val(),
            Nombres: $('#txtnames').val(),
            Apellidos: $('#txtlastname').val(),
            Correo: $('#txtEmail').val(),
            Activo: $('#Active').val() == 'true' ? true : false
        }
        user.IdUsuario == 0 ? datadable.row.add(user).draw(false) : datadable.row(selectedRow).data(user).draw(false);
        $('#FormModal').modal('hide');
    }



</script>
}